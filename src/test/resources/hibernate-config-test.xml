<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

	 <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">${jdbcDriver.className}</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/backendtest</property>
        <property name="hibernate.connection.username">fpbackend</property>
        <property name="hibernate.connection.password">fpbackendtestps</property>
		<!-- JDBC connection pool (use the built-in) -->
		<property name="hibernate.connection.pool_size">1</property>
		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- IMPORTANT: for efficiency, in a real deployment the following debug 
			properties must be commented or removed. -->
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.use_sql_comments">true</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- List of persistent classes -->
		<mapping class="es.ficonlan.web.backend.model.user.User" />
		<mapping class="es.ficonlan.web.backend.model.role.Role" />
	    <mapping class="es.ficonlan.web.backend.model.usecase.UseCase" />
        <mapping class="es.ficonlan.web.backend.model.event.Event" />
        <mapping class="es.ficonlan.web.backend.model.registration.Registration" />
        <mapping class="es.ficonlan.web.backend.model.activity.Activity" />
        <mapping class="es.ficonlan.web.backend.model.newsitem.NewsItem" />
		<mapping class="es.ficonlan.web.backend.model.supportedlanguage.SupportedLanguage" />

		<mapping class="es.ficonlan.web.backend.model.emailadress.Adress" /> 
		<mapping class="es.ficonlan.web.backend.model.sponsor.Sponsor"/>
		<mapping class="es.ficonlan.web.backend.model.emailtemplate.EmailTemplate"/>

	</session-factory>
</hibernate-configuration>